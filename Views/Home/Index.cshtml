@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img class="display-4" src="Img/AmazingSeries.jpg">
    <section style="margin-top:50px;">
    <div class="row">
        @foreach (Series item in ViewBag.series_)
        { 
            <div class="col-md-4 col-12">
                <div class="card" style="background-color: rgb(219, 236, 210); border: solid rgb(179, 194, 171) 3px">
                    <img src="@item.ImagenSerie" class="card-img-top" alt="ll">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <button type="button" class="btn btn-primary" id="btn1" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="MostrarDetalleTemporadas(@item.IdSerie,'@item.Nombre')">Temporadas</button>
                        <button type="button" class="btn btn-primary" id="btn2" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="MostrarDetalleActores(@item.IdSerie)"> Actores</button>
                        <button type="button" class="btn btn-primary" id="btn3" data-bs-toggle="modal" data-bs-target="#ModalSerie" onclick="MostrarDetalleSerie(@item.IdSerie)"> Ver Info </button>
                    </div>
                </div>
            </div>
        }
    </div>
 </section>
</div>


<!--Modal-->
<div class="modal" id="ModalSerie" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="Title"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="cuerpo">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
